{
  "name": "hotpot-fund-v2",
  "license": "UNLICENSED",
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "prepare": "mustache config/mainnet.json src/helpers.template.ts > src/helpers.ts && mustache config/mainnet.json subgraph.template.yaml > subgraph.yaml",
    "prepare:dev": "mustache config/ropsten.json src/helpers.template.ts > src/helpers.ts && mustache config/ropsten.json subgraph.template.yaml > subgraph.yaml",
    "deploy": "graph deploy HotPotFund/hotpot-fund-v2-plus --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/",
    "deploy:dev": "graph deploy HotPotFund/hotpotfund-v2-ropsten --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/",
    "create:local": "graph create --node http://localhost:8020/ HotPotFund/hotpot-fund-v2-plus",
    "remove:local": "graph remove --node http://localhost:8020/ HotPotFund/hotpot-fund-v2-plus",
    "deploy:local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 HotPotFund/hotpot-fund-v2-plus"
  },
  "dependencies": {},
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.22.1",
    "@graphprotocol/graph-ts": "^0.22.1",
    "mustache": "^3.1.0"
  }
}
